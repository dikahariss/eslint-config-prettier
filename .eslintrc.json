{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["prettier", "html"],
  "env": {
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-process-exit": "off",
    "class-methods-use-this": "off",
    "func-names": "off",
    "space-before-function-paren": "off"
  }
}
